<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:padding="2dp"
    android:background="@drawable/cardview_style">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="8dp"
        app:cardMaxElevation="5dp"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/rcy_Time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/rcy_Context"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:layout_weight="4"
                    android:maxLines="10"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/rcy_Money"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">

                <!-- Radio Button Group -->
                <RadioGroup
                    android:id="@+id/money_type2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:checkedButton="@+id/rb_car"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_weight="2">

                    <RadioButton
                        android:id="@+id/rb_car2"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:background="@android:color/transparent"
                        android:checked="true"
                        android:button="@null"
                        android:text="  교통비"
                        android:textSize="12sp"
                        android:drawableLeft="@drawable/car3"
                        android:includeFontPadding="false"/>

                    <RadioButton
                        android:id="@+id/rb_house2"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="16dp"
                        android:button="@null"
                        android:text="  숙박비"
                        android:textSize="12sp"
                        android:drawableLeft="@drawable/house3"
                        android:includeFontPadding="false" />

                    <RadioButton
                        android:id="@+id/rb_cook2"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="16dp"
                        android:button="@null"
                        android:text=" 식  비"
                        android:textSize="12sp"
                        android:drawableLeft="@drawable/cook3"
                        android:includeFontPadding="false" />

                    <RadioButton
                        android:id="@+id/rb_etc2"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="16dp"
                        android:button="@null"
                        android:text=" 기  타"
                        android:textSize="12sp"
                        android:drawableLeft="@drawable/etc3"
                        android:includeFontPadding="false" />

                </RadioGroup>

                <TextView
                    android:id="@+id/tx_type2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>